{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./resources/js/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "public",
    "node_modules/ziggy-js/src/js/index.d.ts"
  ],
  "include": [
    "./resources/js/**/*.ts",
    "./resources/js/**/*.tsx",
    "./resources/js/**/*.d.ts"
  ]
}